<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/face_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:paddingTop="30dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <View
                    android:id="@+id/left_brow"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="#555555"
                    android:rotation="-10"
                    android:layout_marginBottom="12dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/left_eye_border"
                    android:layout_width="97dp"
                    android:layout_height="67dp"
                    android:rotation="-5"
                    app:cardBackgroundColor="#555555"
                    app:cardCornerRadius="33dp"
                    app:cardElevation="0dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/left_eye"
                        android:layout_width="95dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#45cea2"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/left_pupil"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#1A1A1A"
                            app:cardCornerRadius="18dp">
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@android:drawable/presence_online"
                                android:backgroundTint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:paddingTop="30dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <View
                    android:id="@+id/right_brow"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="#555555"
                    android:rotation="10"
                    android:layout_marginBottom="12dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/right_eye_border"
                    android:layout_width="97dp"
                    android:layout_height="67dp"
                    android:rotation="5"
                    app:cardBackgroundColor="#555555"
                    app:cardCornerRadius="33dp"
                    app:cardElevation="0dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/right_eye"
                        android:layout_width="95dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#45cea2"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="0dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/right_pupil"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#1A1A1A"
                            app:cardCornerRadius="18dp">
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:background="@android:drawable/presence_online"
                                android:backgroundTint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:textColor="#555555"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="-6dp" />

    </LinearLayout>
</FrameLayout>
